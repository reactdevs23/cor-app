{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,

    "lib": ["dom", "dom.iterable", "esnext", "es2015"],

    "target": "es5",

    "allowJs": true, // allow importing .js and .jsx files
    "jsx": "react-jsx", // enable JSX support
    "checkJs": false, // optional: disables type checking in JS files (can be true if you want)

    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*", "src/.d.ts"],
  "exclude": ["node_modules", "dist"]
}
